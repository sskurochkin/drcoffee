+include-style('personal')

.personal
	.personal-form
		.personal-form__header
			.personal-form__title.h2 Данные о компании
			.personal-form__info Задолженность: 0.00 руб.
		.personal-form__form(x-data="{edit:false}" )
			form.form-block(:class="edit && 'edit'")
