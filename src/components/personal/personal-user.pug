					+input({
						fg_mod: 'form-group--margin',
						label_mod: 'form-control-label--small',
						label: 'Адрес компании компании',
						type: 'text',
						placeholder: false,
						required: true,
						pattern: false,
						validation: {
							message: 'Обязательное поле',
							regexp: 'Неверный формат',
							emailaddress: ' ',
							identical: false
						}
					})(value="Кирова 27 А")
