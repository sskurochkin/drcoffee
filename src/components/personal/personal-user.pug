						fg_mod: 'form-group--margin',
						label_mod: 'form-control-label--small',
						label: 'УНП',
						type: 'text',
						placeholder: false,
						required: false,
						pattern: false,
						validation: {
							message: 'Обязательное поле',
							regexp: 'Неверный формат',
							emailaddress: ' ',
							identical: false
						}
					})(value="123456789")
					+input({
					fg_mod: 'form-group--margin',
					label_mod: 'form-control-label--small',
					label: 'Имя  руководителя',
					type: 'text',
					placeholder: false,
					required: false,
					pattern: false,
					validation: {
						message: 'Обязательное поле',
						regexp: 'Неверный формат',
						emailaddress: ' ',
						identical: false
					}
						})(value="Иванов Иван")
					+input({
					fg_mod: 'form-group--margin',
					label_mod: 'form-control-label--small',
					label: 'Номер телефона',
					type: 'tel',
					placeholder: false,
					required: false,
					pattern: false,
					validation: {
						message: 'Обязательное поле',
						regexp: 'Неверный формат',
						emailaddress: ' ',
						identical: false
					}
						})(value="+375 (29) 12-23-456")


				.form-block__footer
					.form-edit(x-cloak x-show="edit")
						.btn.btn--nav(@click="edit=false")
							span Отмена
						button(type="submit").btn.btn--cart
							span Сохранить данные
					.btn.btn--nav(x-cloak  x-show="!edit" @click="edit=true")
						span Редактировать

