+include-style('review-slider')
+include-script('review-slider')

mixin review-card(args={})

	.review-card
		.review-card__head
			.review-card__img
				img(loading="lazy" src=SITE_TEMPLATE_PATH + 'images/team.png')
			.review-card__title
				.name=args.title
				.info
					.rate
						.rate-item
						.rate-item
						.rate-item
						.rate-item
						.rate-item.rate-item--empty

					.review-card__date 12.06.2024
		.review-card__text=args.text
		.review-card__link
			a(href="#").btn.btn--black.btn--fw
				span читать полностью


